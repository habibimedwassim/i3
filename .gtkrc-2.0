# ~/.gtkrc-2.0

gtk-theme-name = "Fluent-Dark-compact"
gtk-icon-theme-name = "Papirus-Dark"
gtk-font-name = "Fira Sans Semi-Light 11"
gtk-cursor-theme-name = "capitaine-cursors-light"
gtk-cursor-theme-size = 0

# Toolbar style
gtk-toolbar-style = GTK_TOOLBAR_BOTH
gtk-toolbar-icon-size = GTK_ICON_SIZE_LARGE_TOOLBAR

# Button and menu images
gtk-button-images = 0
gtk-menu-images = 0

# Enable event and input feedback sounds
gtk-enable-event-sounds = 1
gtk-enable-input-feedback-sounds = 1

# Font rendering settings (Xft)
gtk-xft-antialias = 1
gtk-xft-hinting = 1
gtk-xft-hintstyle = "hintslight"
gtk-xft-rgba = "rgb"

# Modules - GTK2 doesn't support gail or atk-bridge modules here, ignore them

